<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="test.eventadmin.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="test.eventadmin.Perspective"
            id="test.eventadmin.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="SenderView"
            class="test.eventadmin.SenderView"
            id="test.eventadmin.senderview">
      </view>
      <view
            class="test.eventadmin.SenderView2"
            id="test.eventadmin.senderview2"
            name="SenderView2"
            restorable="true">
      </view>
       <view
            class="test.eventadmin.ReceiverView2"
            id="test.eventadmin.receiverview2"
            name="ReceiveerView2"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="test.eventadmin.senderview">
         </view>
          <view
               id="test.eventadmin.senderview2"
               minimized="false"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               id="test.eventadmin.receiverview"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
         <view
               id="test.eventadmin.receiverview2"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
